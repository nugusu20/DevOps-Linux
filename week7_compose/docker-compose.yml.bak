services:
  backend:
    image: python:3.12-slim
    working_dir: /app
    command: python -m http.server 8000
    ports: ["8000:8000"]
    depends_on: [db]
    networks: [app_net]
    volumes:
      - ./config.json:/app/config/config.json:ro

  db:
    image: postgres:16
    environment:
      POSTGRES_USER: app
      POSTGRES_PASSWORD: example
      POSTGRES_DB: appdb
    networks: [app_net]
    volumes:
      - pgdata:/var/lib/postgresql/data

volumes:
  pgdata:

networks:
  app_net:
    driver: bridge
